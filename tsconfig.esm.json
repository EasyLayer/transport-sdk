{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist/esm",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
  },
  "references": [],
  "include": ["src"],
  "exclude": [
    "scripts",
    "e2e-tests",
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/__tests__"
  ]
}